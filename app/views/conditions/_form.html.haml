.container
  %ul
    - @condition.errors.full_messages.each do |message|
      %li= message

  = form_with(model: condition, local: true) do |f|
    %div
      = f.label :dates, '日付'
    %div
      = f.date_select :dates
    %div
      = f.label :mental, '気分'
    %div
      = f.select :mental, Condition.mentals.keys, { include_blank: '選択して下さい'}, { class: 'text'}
    %div
      = f.label :weight, '体重'
    %div
      = f.text_field :weight
    %div
      = f.label :temperature, '体温'
    %div
      = f.text_field :temperature
    %div
      = f.label :sleep_start, '就寝時間'
    %div
      = f.datetime_select :sleep_start
    %div
      = f.label :sleep_end, '起床時間'
    %div
      = f.datetime_select :sleep_end
    %div
      =f.label :exercise, 'エクササイズ'
    %div
      =f.text_area :exercise
    %div
      =f.label :food, '食事'
    %div
      =f.text_area :food

    = f.submit '保存', class: 'btn-primary'