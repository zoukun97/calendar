.container
  .body_header
    .prev
      = link_to 'previous', condition_path(@condition.dates - 1)
    .date
      = @condition.dates
    .next
      = link_to 'next', condition_path(@condition.dates + 1) if @condition.dates != Date.today
  .edit
    = link_to "Edit today's health", edit_condition_path, class: 'link'
  .section 
    .section_title
      .section_title_tag
        = image_tag 'mental.png'
        %p mental
      .section_title_detail
        = @condition.mental
  .section 
    .section_title
      .section_title_tag
        = image_tag 'temperature.png'
        %p temperature
      .section_title_detail
        = @condition.temperature
  .section 
    .section_title
      .section_title_tag
        = image_tag 'sleeptime.png'
        %p sleep
      .section_title_detail
        = @condition.sleep_start.strftime( "%H:%M" )
        %span -
        = @condition.sleep_end.strftime( "%H:%M" )
  .section 
    .section_title
      .section_title_tag
        = image_tag 'exercise.png'
        %p exercise
      .section_title_detail
        = @condition.exercise
  .section 
    .section_title
      .section_title_tag
        = image_tag 'food.png'
        %p food 
      .section_title_detail
        = @condition.food 
  .section 
    .section_title
      .section_title_tag
        = image_tag 'weight.png'
        %p weight
      .section_title_detail
        = @condition.weight
