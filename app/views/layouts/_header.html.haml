.header
  - if current_page?(root_path)
    .header_left
      = image_tag 'health.png'
    .header_title
      HealthCheck
    .header_right
      - if user_signed_in?
        = link_to 'logout', destroy_user_session_path, data: {method: 'delete'}
      - else 
        = link_to 'login', new_user_session_path
  - else 
    .header_left
      = image_tag 'health.png'
    .header_title
      = link_to 'HealthCheck', root_path